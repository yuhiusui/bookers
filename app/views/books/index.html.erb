<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

<h3>Books</h3>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book_path(book) %></td>
			<td><%= link_to "edit", edit_book_path(book) %></td>
			<td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h3>New book</h3>
<% if @book.errors.any? %>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<%= form_for(@book) do |f| %>

	<%= f.label :Title %><br>
	<%= f.text_field :title %><br>

	<%= f.label :Body %><br>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %>

<% end %>